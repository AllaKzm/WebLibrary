        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Demands)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EmpId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EmpId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmpId">Delete</a>
